{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish-packages": "turbo run build lint && changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.0.3",
    "tsconfig": "*",
    "turbo": "latest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "prettier --check"
    ]
  },
  "name": "makers-frontend",
  "version": "1.0.0",
  "packageManager": "yarn@1.22.17",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.26.2"
  }
}
