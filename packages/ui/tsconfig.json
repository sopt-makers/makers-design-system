{
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "outDir": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noEmitOnError": true,
    "target": "esnext"
  },
  "extends": "tsconfig/react-library.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"]
}
